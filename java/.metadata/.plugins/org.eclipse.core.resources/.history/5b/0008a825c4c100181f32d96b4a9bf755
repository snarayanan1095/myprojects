package java_6200;

/**
 * @author shwethanarayanan
 * NUID: (001422526)
 *
 */
public class Plant {
	String TypeName;
	int SpecimenId;
	int PlantAge;
	double PlantLength;
	
	public Plant(){
		String Typename="Mangotree";
		SpecimenId=123;
		PlantAge=0;
		PlantLength=0.0;
	}
	
	public Plant(String TypeName, int SpecimenId, int PlantAge, double PlantLength){
		growPlant(PlantLength,PlantAge);
		this.PlantLength=PlantLength;
		this.PlantAge=PlantAge;
		
	}
	
	public void growPlant(double PlantLength, int PlantAge){
		PlantAge=PlantAge+1;
		PlantLength=PlantLength+0.2;
		this.PlantLength=PlantLength;
		this.PlantAge=PlantAge;
	}
	public String formattedToString(){
		String TypeName="Mango Tree";
		String MyPlant=String.format("Plant %1$10s %2$01d %3$01d %4$5.2f",TypeName, SpecimenId, PlantAge, PlantLength);
		return MyPlant;
	}
	
}
